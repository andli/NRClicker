<LinearLayout
    android:id="@+id/FragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:useDefaultMargins="true"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|fill"
        android:padding="5dp"
        android:gravity="fill">

        <net.pooksoft.nrclicker.ui.LabeledNumberPicker
            app:labelText="Link Strength"
            app:rangeMax="5"
            app:rangeMin="0"
            app:startValue="0"
            app:fontSize="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lnpLinkStrength"
            android:gravity="fill"
            android:layout_gravity="fill"
            android:layout_weight=".5" />

        <net.pooksoft.nrclicker.ui.LabeledNumberPicker
            app:labelText=" Tags"
            app:rangeMax="50"
            app:rangeMin="0"
            app:startValue="0"
            app:fontSize="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lnpTags"
            android:gravity="fill"
            android:layout_gravity="fill"
            android:layout_weight=".5" />

        <net.pooksoft.nrclicker.ui.LabeledNumberPicker
            app:labelText="Brain damage"
            app:rangeMax="9"
            app:rangeMin="0"
            app:startValue="0"
            app:fontSize="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lnpBrainDamage"
            android:gravity="fill"
            android:layout_gravity="fill"
            android:layout_weight=".5" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="fill">

        <net.pooksoft.nrclicker.ui.LabeledNumberPicker
            app:labelText=" Agendas"
            app:rangeMax="7"
            app:rangeMin="0"
            app:startValue="0"
            app:fontSize="22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lnpAgendas"
            android:gravity="fill"
            android:layout_gravity="fill"
            android:layout_weight=".5" />

        <net.pooksoft.nrclicker.ui.LabeledNumberPicker
            app:labelText=" Credits"
            app:rangeMax="99"
            app:rangeMin="0"
            app:startValue="5"
            app:fontSize="22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lnpCredits"
            android:gravity="fill"
            android:layout_gravity="fill"
            android:layout_weight=".5" />
    </LinearLayout>

    <net.pooksoft.nrclicker.ui.TurnClicker
        app:numClicks="4"
        app:nextPlayerLabel="Corp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/turnClickerRunner"
        android:layout_weight="1"
        >

    </net.pooksoft.nrclicker.ui.TurnClicker>

</LinearLayout>